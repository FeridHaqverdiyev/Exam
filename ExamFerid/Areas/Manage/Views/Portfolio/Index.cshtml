@using ExamFerid.Models;
 @model List<Portfolio>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Bordered table</h4>
                  <p class="card-description">
                  <a asp-action="Create" asp-controller="Portfolio">Create</a>
                  </p>
                  <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>
                            Count
                          </th>
                          <th>
                             Name
                          </th>
                          <th>
                            Desc
                          </th>
                          <th>
                            Image
                          </th>
                          <th>
                            Settings
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                       @foreach (var item in Model)
                        {
                            count++;

                            <tr>

                              <td>
                                @count
                              </td>
                              <td>
                                @item.Name
                              </td>
                              <td>
                                @item.Decs
                              </td>
                              <td>
                                    <img src="~/assets/img/portfolio/@item.Image" class="img-responsive" alt="">
                              </td>
                              <td>
                               <a asp-action="Update" asp-controller="Portfolio" asp-route-id="@item.Id" class="btn">
                                        <i class="mdi mdi-pencil-box"></i>

                                    </a>
                               <a asp-action="Delete" asp-controller="Portfolio" asp-route-id="@item.Id" class="btn">

                                        <i class="mdi mdi-delete"></i>

                               </a>
                              </td>
                           </tr>
                        }
                      
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>